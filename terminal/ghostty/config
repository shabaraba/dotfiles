# theme = Gruvbox Light

maximize = true
window-save-state = always
font-family = HackGenNerd Console
window-title-font-family = HackGenNerd Console
background-opacity = 0.8
macos-titlebar-style = tabs
background-blur = true
font-size = 14
adjust-cell-height = 2
font-thicken = true
keybind = cmd+shift+h=goto_split:left
keybind = cmd+shift+l=goto_split:right

# Allow Ctrl+L to pass through to Neovim (for Copilot)
keybind = ctrl+l=unbind
window-inherit-working-directory = true
# shell-integration-features = ssh-terminfo,ssh-env
term = xterm-256color

# 形状 block / bar / underline / block_hollow
cursor-style = block_hollow

# 色
cursor-color = #00d1b2
keybind = shift+enter=text:\x1b\r

# Quakeモードのトグル (Cmd+H)
keybind = super+h=toggle_quick_terminal
quick-terminal-position = top
quick-terminal-size = 2000px
quick-terminal-animation-duration = 0.1

# コピー時に行末のスペースをトリムする
clipboard-trim-trailing-spaces = true

# 選択時に自動コピーしない（手動コピーのみ）
copy-on-select = false
